{
  "parser": "babel-eslint",
  "settings": {
    "import/extensions": [".js"],
    "import/parser": "babel-eslint",
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      },
      "webpack": {
        "config": "webpack.config.js"
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["plugin:react/recommended"],
  "rules": {
    "no-console": "off",
    "semi": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-tabs": 2,
    "react/self-closing-comp": 2,
    "react/no-typos": 2
  },
  "plugins": ["import", "react", "filenames"]
}
